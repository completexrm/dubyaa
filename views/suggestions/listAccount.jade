- fromName = (dubyaaUser.user.id===suggestion.fromId) ? 'You' : suggestion.displayName;
.suggestion
	.row.m10b
		.col-md-1.col-sm-1.col-xs-1.align-center
			span.suggestion-icon.ion-ios-lightbulb
		.col-md-11.col-sm-11.col-xs-11
			.p10l
				.suggestion-label "#{suggestion.suggestion}"
				.meta.small.p5l From #{fromName} on #{moment(suggestion.createdOn).format('MMM Do [at] hh:mma')}
				- if(suggestion.reward!=='')
					.row.gift-detail
						.col-md-1.col-sm-1.col-xs-1.align-center
							span.suggestion-icon.fa.fa-gift.gift
						.col-md-11.col-sm-11.col-xs-11 #{suggestion.reward}
	.row
		- var secondColClass = '12';
		- var hasGift = (suggestion.reward!=='') ? '1' : '0';
		- if(dubyaaUser.user.id===suggestion.fromId)
			- secondColClass = '6';
			.col-md-6.col-sm-6.col-xs-6
				a.btn.btn-danger.mark-delete.block.no-radius(data-id="#{suggestion.id}")
					span.fa.fa-archive.p5r
					| Delete This
		div(class="col-lg-#{secondColClass} col-md-#{secondColClass} col-sm-#{secondColClass} col-xs-#{secondColClass}")
			a.btn.btn-primary.mark-backlog.no-radius.block(data-id="#{suggestion.id}", data-label="#{suggestion.suggestion}", data-from-id="#{suggestion.fromId}", data-has-gift="#{hasGift}")
				span.fa.fa-plus.p5r
				| ADD TO MY LIST